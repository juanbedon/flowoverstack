<% provide(:page_title, "New Question") %>

<div class="container">
  <div class="row">
    <div class="col-sm-6 offset-3 my-5">

      <h2 class="text-center mb-4"><%= form_title %></h2>
      
      <% if @question.errors.any? %>
        <div class="alert alert-danger">
          <ul>
          <% @question.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_for @question do |f| %>
        <div class="form-group">
          <%= f.text_field :title, class: "form-control input-lg", placeholder: "Title" %>
        </div>
        <div class="form-group">
          <%= f.text_area :description, class: "form-control input-lg", placeholder: "Description" %>
        </div>
        <div>
          <%= f.submit form_title, class: "btn btn-primary btn-sm btn-block font-weight-bold" %>
        </div>
      <% end %>
    </div>
  </div>
</div>